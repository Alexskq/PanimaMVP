<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
              <%# Searchbar  %>

    <div class="row justify-content-center">
    <%= form_with url: shop_products_path, method: :get, class: "d-flex", html: {autocomplete: "off" } do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Rechercher produit" %>
            <%= image_submit_tag("loupe.png", class: "img-loupe")%>
    <% end %>
  </div>

            <%# mode nuit %>
    <%# <button class="btn-us" data-controller="mode-nuit" data-action="click->mode-nuit#toggleDarkMode">Changer de th√®me</button> %>
      <% if current_user %>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" data-controller="mode-nuit" data-action="click->mode-nuit#toggleDarkMode" <%= current_user.dark_mode ? "checked" : "" %>>
        </div>
      <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
            <div>
                <div class= "bonjour"><p>Bonjour <%= current_user.first_name %></p></div>
            </div>
            <%# <%= image_tag (current_user.photo), class: "avatar", alt: "dropdown menu" %>
            <%= image_tag ('galmier.png'), class: "avatar", alt: "dropdown menu"%>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
